@model IEnumerable<AgentMarket.Models.CSSMapping>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PrettyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CSSName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CSSProperty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CSSUnit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PrettyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CSSName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CSSProperty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CSSUnit)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
