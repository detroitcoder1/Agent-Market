@model IEnumerable<AgentMarket.Models.Product>
@{
    ViewBag.Title = "Home Page";
    string path = Request.Url.GetLeftPart(UriPartial.Authority) + "/AgentResources/Uploads/";
    var Product = Model.FirstOrDefault(m => m.FeaturedDeal == true);

}
<!-- Loader -->

<div class="loader">
    <div class="loader-img"></div>
</div>
<!-- Second content -->
<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="row">
                    <div class=" col-md-12">
                        <h3><strong>Featured Offer</strong></h3>
                        <img src="@path@System.IO.Path.GetFileName(Product.Image2.TrimStart())" class="fadeInDownBig" />
                    </div>

                    <div class=" col-md-12">
                        <h1><strong>@Html.DisplayFor(model => Product.ProductName)</strong></h1>
                        <h3>@Html.DisplayFor(modelItem => Product.DescriptionHook1)</h3>
