                    </div>
                    <h3>@Html.DisplayFor(modelItem => Product.BulletPoint2)</h3>
                    <div class="more-features-box-text-description">
                    </div>
                </div>
                <div class="more-features-box-text">
                    <div class="more-features-box-text-icon">
                        <span aria-hidden="true" class="typcn typcn-user"></span>
                    </div>
                    <h3> @Html.DisplayFor(modelItem => Product.DescriptionHook1)</h3>
                    <div class="more-features-box-text-description">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Always beautiful -->
<div class="always-beautiful-container section-container">
