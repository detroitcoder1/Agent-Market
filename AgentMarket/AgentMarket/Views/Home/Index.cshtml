<script>
    $(document).ready(function () {
        $(".delete-file").click(function (e) {
            e.preventDefault();
            var temp = $(this).attr("href");
            $.ajax({
                type: "POST",
                url: "/Upload/Delete",
                data: { filename: temp }
            }).success(function () {
                location.reload();
            });
        });
    });
</script>
