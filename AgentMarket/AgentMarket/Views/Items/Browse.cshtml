@model IEnumerable<AgentMarket.Models.Product>


@{
    ViewBag.Title = "Browse";
    int counter = 0;
    int id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Browse</h2>
<div class=browse-section-container>
    @foreach (var product in Model)
    {

        if (counter != 0 && counter % 2 == 0)
        {
            //id = article.ProductID;
        @:</div>
        @:<div class="browse-section-container">
        }

        <div class="col-md-4 border-danger" style="margin-bottom:auto;">

            <div class="thumbnail  ">
                <div> <img src="@product.Thumbnail" /></div>
                
                <div class="caption">
                    <h3 style="font-size:small;">@Html.DisplayFor(modelItem => product.ProductName)</h3>
                    <h3 style="font-style: italic">@Html.DisplayFor(modelItem => product.DescriptionHook1)</h3>
                    <div>@Html.DisplayFor(modelItem => product.MainDescription)</div>
                    <div class="col-md offset-3">

                        @Html.ActionLink("Learn More", "SelectedProduct", new {product.SalePrice})
                    </div>
                </div>
            </div>

        </div>


        counter++;

    }

</div>
